{
  "plugins": ["prettier-plugin-tailwindcss"],
  "semi": false,
  "singleQuote": true,
  "singleAttributePerLine": true,
  "bracketSameLine": true,
  "arrowParens": "avoid",
  "printWidth": 120,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "parser": "none"
      }
    },
    {
      "files": ".htaccess",
      "options": {
        "parser": "none"
      }
    }
  ]
}
